{
  "name": "pacientech-api",
  "version": "1.0.2",
  "description": "A RESTful api to view, add, modify, and delete patient records for private practicing physicians.",
  "scripts": {
    "start": "yarn run build && node lib/server.js",
    "build": "rm -rf ./lib/ && babel src -d lib --ignore 'src/tests/'",
    "dev": "NODE_ENV=development nodemon --exec babel-node src/server.js",
    "lint": "eslint --ext .js src/",
    "test": "NODE_ENV=test jest --colors --runInBand --coverage --detectOpenHandles src/tests/index.test.js"
  },
  "engines": {
    "yarn": "1.13.0"
  },
  "main": "lib/server.js",
  "repository": "https://github.com/vzhny/pacientech-api",
  "author": "Diego Vizhnay <diego@vzhny.com> (https://vizhnay.io)",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/db/**",
      "!**/config/**"
    ],
    "coverageDirectory": "./src/tests/coverage"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.9",
    "morgan": "^1.9.1",
    "shortid": "^2.2.14",
    "time-stamp": "^2.2.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "node-localstorage": "^1.3.1",
    "nodemon": "^1.18.9",
    "supertest": "^3.4.2"
  }
}
